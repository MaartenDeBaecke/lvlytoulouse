  <%= render "shared/navtoy" %>
  <script type="text/javascript">
    $(document).ready(function() {
        $("#back2Top").click(function(event) {
          var mqq = window.matchMedia( "(max-width: 580px)" );
          var mq = window.matchMedia( "(min-width: 580px)" );
          var mmq = window.matchMedia( "(min-width: 770px)" );
          var m = window.matchMedia( "(min-width: 1000px)" );
          if (mq.matches) {
            if (mmq.matches) {
              if (m.matches) {
                $("html, body").animate({ scrollTop: 196 }, "med");
              return false;
              } else {
              $("html, body").animate({ scrollTop: 200 }, "med");
              return false;
              }
            } else {
              $("html, body").animate({ scrollTop: 230 }, "med");
            return false;
            }
          }
          else if (mqq.matches) {
            $("html, body").animate({ scrollTop: 220 }, "med");
            return false;
          }
          
        });

    });
  </script>
</head>
