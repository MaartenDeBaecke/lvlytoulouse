<div class="food-card-container">
  <div class="card data-id="<%= toy.id %>">
    <div class="food_card">
      <div class="row">
        <div class="col-3">
          <div class="food_img">
            <% if toy.image == ""%>
              <%= image_tag "img_not_found.png" %>
            <% else %>
              <img src="<%= toy.image %>" onerror="this.src='https://static.wixstatic.com/media/299c16_38f1aebf206c4bf38939c7f24dc72139~mv2.png/v1/fill/w_407,h_560,al_c,q_80/img_not_found.webp'">
            <% end %>
          </div>
        </div>
        <div class="col-9">
          <div class="food_title">
            <a href="<%= toy.title %>">
              <div class="food_title1">
                <%= toy.name %>
              </div>  
            </a>
          </div>
          <div class="food_description">
            <p><%= toy.description %></p>
          </div>
          <%if logged_in?(:admin)%>
            <div class="edit-food">
              <%= link_to 'Edit', edit_toy_path(toy), style: 'color:black' %>
              <%= link_to 'Delete', toy, method: :delete, data: { confirm: 'Are you sure?' }, style: 'color:black' %>
            </div>
          <% else %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>