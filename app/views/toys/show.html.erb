<div class="food-card-container">
  <div class="card">
    <div class="food_card">
      <div class="row">
        <div class="col-3">
          <div class="food_img">
            <% if @toy.image == ""%>
              <%= image_tag "img_not_found.png" %>
            <% else %>
              <img src="<%= @toy.image %>" onerror="this.src='https://static.wixstatic.com/media/299c16_38f1aebf206c4bf38939c7f24dc72139~mv2.png/v1/fill/w_407,h_560,al_c,q_80/img_not_found.webp'">
            <% end %>
          </div>
        </div>
        <div class="col-9">
          <div class="food_title">
            <a href="<%= @toy.title %>">
              <div class="food_title1">
                <%= @toy.name %>
              </div>  
            </a>
          </div>
          <div class="food_description">
            <p><%= @toy.description %></p>
          </div>
          
        </div>
      </div>
    </div>
    <div class="food-card-show-button">
      <%= link_to fa_icon('check size: 2x'), toys_path,style: "color: green;" %>&nbsp&nbsp
      <%= link_to fa_icon('times size: 2x'), edit_toy_path(@toy),style: "color: red;" %>
    </div>
  </div>
</div>
